<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane  id="register-menu" prefHeight="650.0" prefWidth="1200.0" stylesheets="@../css/loginregisterstyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.civilization.views.RegisterPage">

    <center>

        <VBox alignment="CENTER" maxWidth="350.0" prefHeight="400.0" prefWidth="282.0" spacing="10">
            <Button onMouseClicked="#initialize" text="Random" />
            <ImageView fx:id="avatarPic" fitHeight="88.0" fitWidth="93.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
            <Button onMouseClicked="#changeAvatarPic" text="Next Picture" />
            <Label text="Username" />
            <TextField fx:id="username" promptText="enter your username" />
            <Label text="Password" />
            <TextField fx:id="password" promptText="enter your password" />
            <Label text="Nickname" />
            <TextField fx:id="nickname" promptText="enter your nickname" />
            <Button onMouseClicked="#register" text="Register" />
            <Button onMouseClicked="#back" text="back" />
            <Label fx:id="error" text="" />
        </VBox>

    </center>


</BorderPane>
