<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="menu" prefHeight="650.0" prefWidth="1200.0" stylesheets="@../css/loginregisterstyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientapp.views.ProfilePage">
    <center>

        <VBox alignment="CENTER" maxWidth="350" spacing="10">

            <Button fx:id="back" mnemonicParsing="false" onMouseClicked="#backToMain" prefHeight="10.0" text="back" />
            <ImageView fx:id="avatarPic" fitHeight="97.0" fitWidth="122.0" pickOnBounds="true" preserveRatio="true" />
            <Button mnemonicParsing="false" onMouseClicked="#selectImage" prefHeight="10.0" text="Select Image" />
            <Button onMouseClicked="#changeAvatarPic" prefHeight="10.0" text="Next Picture" />
            <Label prefHeight="10.0" text="Change Nickname" />
            <TextField fx:id="nickname" maxWidth="-Infinity" prefWidth="300.0" promptText="new nickname" />

            <Button onMouseClicked="#changeNickname" prefHeight="10.0" text="Change Nickname" />
            <Label prefHeight="10.0" text="Change Password" />
            <TextField fx:id="password" maxWidth="-Infinity" prefWidth="300.0" promptText="new password" />

            <Button onMouseClicked="#changePassword" prefHeight="10.0" text="Change Password" />
          
            <Button onMouseClicked="#deleteAccount" prefHeight="10.0" text="Delete your account" />
            <Label fx:id="nicknameError" text="" />
            <Label fx:id="passwordError" text="" />
        </VBox>

    </center>

</BorderPane>
   
