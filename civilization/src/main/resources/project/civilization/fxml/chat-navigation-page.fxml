<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.civilization.views.ChatMenuNavigation"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="publicChatButton" onMouseClicked="#goToPublicChats" text="public chat"/>
            <Button fx:id="privateChatsButton" onMouseClicked="#goToPrivateChats" text="private chats"/>
            <Button fx:id="roomsButton" onMouseClicked="#goToRooms" text="rooms"/>
        </VBox>
    </center>
</BorderPane>
