<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.civilization.views.ProfilePage">
    <center>

        <VBox alignment="CENTER" maxWidth="350" spacing="10">

            <Button fx:id="back" mnemonicParsing="false" onMouseClicked="#backToMain" text="back" />
            <ImageView fx:id="avatarPic" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         <Button mnemonicParsing="false" onMouseClicked="#selectImage" text="Select Image" />
            <Button onMouseClicked="#changeAvatarPic" text="Next Picture" />
            <Label text="Change Nickname" />
            <TextField fx:id="nickname" maxWidth="-Infinity" prefWidth="300.0" promptText="new nickname" />

            <Button onMouseClicked="#changeNickname" text="Change Nickname" />
            <Label fx:id="nicknameError" text="" />
            <Label text="Change Password" />
            <TextField fx:id="password" maxWidth="-Infinity" prefWidth="300.0" promptText="new password" />

            <Button onMouseClicked="#changePassword" text="Change Password" />
            <Label fx:id="passwordError" text="" />
          
            <Button onMouseClicked="#deleteAccount" text="Delete your account" />
        </VBox>

    </center>

</BorderPane>
