<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.shape.Rectangle?>
<BorderPane id="main-menu" prefHeight="650.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.civilization.views.MainPage">
    <Rectangle opacity="0.7" fill="black" height="430" width="400" fx:id="fadeRectangle" x="400" y="150"/>
    <center>

        <VBox alignment="CENTER" maxWidth="480" maxHeight="571" spacing="10" styleClass="menu-bar">
            <Button onMouseClicked="#newGame" prefHeight="123.0" text="Game menu">
                <VBox.margin>
                    <Insets top="70.0" />
                </VBox.margin></Button>
            <Button fx:id="profile" onMouseClicked="#profile" prefHeight="39.0" text="Profile" />
            <Button fx:id="setting" onMouseClicked="#setting" prefHeight="10.0" text="Setting" />
            <Button onMouseClicked="#scoreBoard" prefHeight="10.0" text="Score Board" />
            <Button onMouseClicked="#logout" prefHeight="10.0" text="Logout" />
            <Button onMouseClicked="#exit" prefHeight="0.0" text="Exit" />

        </VBox>

    </center>
    <top>

        <Label fx:id="name" prefHeight="0.0" prefWidth="122.0" text="Civilizatoin " BorderPane.alignment="CENTER" />
    </top>

</BorderPane>
