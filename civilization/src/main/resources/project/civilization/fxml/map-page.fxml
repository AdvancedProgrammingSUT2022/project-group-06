<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="pane" prefHeight="650.0" prefWidth="1200.0" styleClass="gamepageButton" stylesheets="@../css/PanelsStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.civilization.views.MapPage">
    <AnchorPane id="title" fx:id="anchorPane" prefHeight="50.0" prefWidth="1200.0">
        <children>

            <Button fx:id="pauseButton" layoutX="14.0" layoutY="11.0" onMouseClicked="#pause" prefHeight="26.0" prefWidth="46.0" styleClass="gamepageButton" text="pause">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="nextTurnButton" layoutX="70.0" layoutY="11.0" onMouseClicked="#nextTurn" styleClass="gamepageButton" text="Next Turn">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="notification" layoutX="718.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#notification" styleClass="gamepageButton" text="Notification" />
            <Button fx:id="technologyMenu" layoutX="815.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#technology" styleClass="gamepageButton" text="Technology" />
            <Button layoutX="615.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#demographic" styleClass="gamepageButton" text="Demographic" />
            <Button layoutX="554.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#units" styleClass="gamepageButton" text="Units" />
            <Button layoutX="446.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#military" styleClass="gamepageButton" text="Military Panel" />
            <Button layoutX="348.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#citiesPanel" styleClass="gamepageButton" text="Cities Panel" />
        </children>
    </AnchorPane>

</Pane>
